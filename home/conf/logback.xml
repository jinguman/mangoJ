<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
	    <layout class="ch.qos.logback.classic.PatternLayout">
		<Pattern>
			%date{HH:mm:ss.SSS} [%thread] [%-5level] [%logger:%line] %msg%n
		</Pattern>
	    </layout>
	    <withJansi>false</withJansi>
	</appender>

	<appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>../log/mango.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>../log/mango.log.%d{yyyy-MM-dd}</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>
				%date{HH:mm:ss.SSS} [%thread] [%-5level] [%logger:%line] %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="trafficRollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>../log/traffic.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>../log/traffic.log.%d{yyyy-MM-dd}</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>
				%date{yyyy-MM-dd HH:mm:ss.SSS} %msg%n
			</pattern>
		</encoder>
	</appender>


	<!-- Application Loggers -->
	<logger name="org.mongodb.driver" level="WARN">
		<appender-ref ref="rollingFile" />
	</logger>

	<logger name="org.springframework" level="info" additivity="false">
		<appender-ref ref="console" />
	</logger>
	
	<logger name="com.kit" level="debug" additivity="false">
		<appender-ref ref="console" />
	</logger>

	<logger name="io.netty" level="INFO">
		<appender-ref ref="console" />
	</logger>

	<logger name="app.kit.service.TrafficLogService" level="INFO">
		<appender-ref ref="trafficRollingFile" />
	</logger>

	<root level="DEBUG">
		<appender-ref ref="console" />
	</root>

</configuration>